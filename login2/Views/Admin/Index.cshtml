@model IEnumerable<UsersViewModel>

<h1>User List</h1>

<p>
    <a asp-action="Create">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaireNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aidat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefonNumarasi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DaireNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aidat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefonNumarasi)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
